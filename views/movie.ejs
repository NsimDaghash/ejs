    <section>
        <div class="comments-area">
            <div class="left-side" >
                <% reviewsLeft.forEach(function(review) { %>
                    <div class="comment">
                        <img src="/<%= movieTitle %>/gif.<%= review.rating %>.gif" alt="<%= review.rating %>">
                        <p><%= review.text %></p>
                        <p class="commented-user"><%= review.reviewer %></p>
                        <p class="publication"><%= review.publication %></p>
                    </div>
                <% }); %>
            </div>
            <div class="right">
                <% reviewsRight.forEach(function(review) { %>
                    <div class="comment">
                        <img src="/<%= movieTitle %>/gif.<%= review.rating %>.gif" alt="<%= review.rating %>">
                        <p><%= review.text %></p>
                        <p class="commented-user"><%= review.reviewer %></p>
                        <p class="publication"><%= review.publication %></p>
                    </div>
                <% }); %>
            </div>
        </div>
        <div class="green-stripe">
            <p><%= reviewsLeft.length + reviewsRight.length %> of <%= reviews.length - 1 %></p>
        </div>
    </section>
								
