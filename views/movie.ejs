  <link href="./movie.css"  rel="stylesheet" />
</head>
<body>
    <header>
        <img src="./banner.png" alt="Rancid Tomatoes" class="banner-image"/>
    </header>
  <h1><%= name %> (<%= year %>)</h1>
  
  <!-- <img src="../tmnt/placard.png" alt="<%= name %>"> -->
  <img src="./tmnt/placard.png" alt="<%= name %>">
  
  <p><strong>Rating:</strong> <%= rating %>% <%= freshCount %> fresh <%= reviews.length - freshCount %> rotten</p>
  
  <h2>Cast</h2>
  <div class="page-content">
    <div class="movie-summary">
        <dl>
            <% for (var i = 0; i < cast.length; i++) { %>
            <dt> <%= cast[i].description %></dt><dl> <%= cast[i].title %>  </dl>
            <% } %>
        </dl>
    </div>
